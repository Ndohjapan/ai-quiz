<body>
    <!-- Quiz Box -->
    <div class="quiz_box">
        <header>
            <div class="title">Awesome Quiz Application</div>
            <div class="timer">
                <div class="time_left_txt">Time Left</div>
                <div class="timer_sec">10</div>
            </div>
            <div class="time_line"></div>
        </header>
        <section>
            <div class="que_text">
                <span>Lorem ipsum dolor sit amet consectetur adipisicing elit. Quas impedit soluta deserunt cumque qui repellendus sapiente provident odio maiores accusamus.</span>
                <!-- Here I've inserted question from JavaScript -->
            </div>
            <div class="option_list">
                
            </div>
        </section>

        <!-- footer of Quiz Box -->
        <footer>
            <div class="total_que">
                <!-- Here I've inserted Question Count Number from JavaScript -->
                <span><p id="current-question">1</p> of <p  id="total-questions">10</p> Questions</span>
            </div>
            <button class="next_btn">Next Que</button>
        </footer>
    </div>

    <div class="info_box activeInfo" id="waiting-box">
        <div class="info-title"><span>Quiz Details</span></div>
        <div class="info-list">
            <div class="info">
                <label for="easy">Quiz ID - <strong id="quizid-field">Ndohjapan</strong></label><br>
                <label for="easy">Difficulty - <strong id="difficulty-field">Hard</strong></label><br>
                <label for="easy">Category - <strong id="category-field">Football</strong></label><br>
                <label for="easy">Timer - <strong><span id="timer-field">10</span>s</strong></label><br>
                <label for="easy">Participants - <strong><span>1</span>/ <span id="participants-field">10</span> </strong></label> <i class="fa fa-spinner fa-spin" id="loading-spinner" aria-hidden="true"></i> <br>
            </div>
            <div class="info">
                <table class="expected-participants">
                    <thead>
                        <tr>
                            <td> <strong>Id</strong></td>
                            <td> <strong>Username</strong></td>
                        </tr>
                    </thead>
        
                    <tbody>
                        
                    </tbody>
                </table>
            </div>
        </div>
        <div class="buttons">
        </div>
    </div>

    <!-- Result Box -->
    <div class="result_box">
        <div class="icon">
            <i class="fas fa-crown"></i>
        </div>
        <div class="complete_text">You've completed the Quiz!</div>
        <div class="score_text">
            <!-- Here I've inserted Score Result from JavaScript -->
        </div>
        <div class="buttons">
            <button class="quit" id="quit-quiz">Quit Quiz</button>
        </div>
    </div>

